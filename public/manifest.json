{
  "manifest_version": 2,

  "name": "Flow Tabs",
  "description": "The tab manager for busy people.",
  "version": "1.0",

  "icons": {
    "256": "icons/icon256.png",
    "128": "icons/icon128.png",
    "64": "icons/icon64.png",
    "48": "icons/icon48.png",
    "32": "icons/icon32.png",
    "16": "icons/icon16.png"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icons/icon128.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/background.js"]
  },

  "permissions": ["storage", "tabs", "windows"],

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "MacCtrl+Space"
      }
    }
  }
}
